<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/push_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1px"
    android:layout_marginBottom="1px">

    <ImageView
        android:id="@+id/push_notification_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/push_notification_big_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/push_notification_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/black"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/push_notification_small_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/push_notification_big_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:id="@+id/push_notification_style1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="1dp"
        android:layout_toLeftOf="@id/push_notification_small_icon"
        android:layout_toRightOf="@id/push_notification_big_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/push_notification_style1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/push_notification_style1_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="11sp" />
    </LinearLayout>

</RelativeLayout>